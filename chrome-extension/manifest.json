{
  "manifest_version": 3,
  "name": "Smart Form Filler Extension",
  "description": "Enhance your job applications with profiles, auto-fill, and tracking.",
  "version": "2.0",
  "action": {
    "default_popup": "/html/index.html",
    "default_icon": "/icons/icon.png"
  },
  "background": {
    "service_worker": "/js/background.js"
  },
  "permissions": ["storage", "scripting", "activeTab", "downloads", "tabs"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "/icons/icon.png",
    "48": "/icons/icon.png",
    "128": "/icons/icon.png"
  }
}
