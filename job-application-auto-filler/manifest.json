{
    "manifest_version": 3,
    "name": "Auto Form Filler Extension",
    "description": "A Chrome extension for auto-filling job application forms using LinkedIn data.",
    "version": "1.0",
    "permissions": ["storage", "activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "options_page": "options.html",
    "icons": {
      "48": "icons/icon.png"
    }
  }