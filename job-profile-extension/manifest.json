{
	"manifest_version": 3,
	"name": "Job Profile and Application Tracker",
	"version": "1.0",
	"description": "Manage job profiles, track applications, and store data for future submissions.",
	"icons": {
	  "16": "icons/icon16.png",
	  "48": "icons/icon48.png",
	  "128": "icons/icon128.png"
	},
	"action": {
	  "default_popup": "index.html",
	  "default_icon": "icons/icon48.png"
	},
	"permissions": [
	  "storage",
	  "activeTab",
	  "scripting"
	],
	"host_permissions": [
	  "http://*/*",
	  "https://*/*"
	],
	"web_accessible_resources": [
	  {
		"resources": ["*.html"],
		"matches": ["<all_urls>"]
	  }
	]
  }
  